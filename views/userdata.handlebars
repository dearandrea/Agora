<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body"  style="background: white;">
      <h1 class="text-center mb-3">
        <i class="fas fa-briefcase"></i> Personal Info
      </h1>
      {{#each errors}}
        <div class="error">
            <p>{{text}}</p>
        </div>
      {{/each}}
      <form action="/users/userdata" method="POST">
        {{#ifeq x.professione "Student"}}
          <div class="form-group">
            <label for="facolta"><i class="fas fa-graduation-cap"></i>Course of Study</label>
            <input
              type="text"
              id="facolta"
              name="facolta"
              class="form-control"
              placeholder="{{x.data.Facolta}}"
              maxlength="40" 
              value={{facolta}}>
          </div>
        {{/ifeq}}
        {{#ifeq x.professione 'Recruiter'}}
          <div class="form-group">
            <label for="lavoro"><i class="fas fa-wrench"></i>Position</label>
            <input
              type="lavoro"
              id="lavoro"
              name="lavoro"
              class="form-control"
              placeholder="{{x.data.Lavoro}}"
              maxlength="50" 
              value={{lavoro}}>
          </div>
          <div class="form-group">
            <label for="azienda"><i class="fas fa-building"></i>Company</label>
            <input
              type="azienda"
              id="azienda"
              name="azienda"
              class="form-control"
              placeholder="{{x.data.Azienda}}"
              maxlength="50" 
              value={{azienda}}>
          </div>
        {{/ifeq}}
        {{#ifeq x.professione 'Professor'}}
          <div class="form-group">
            <label for="facolta"><i class="fas fa-book"></i>University</label>
            <input
              type="text"
              id="facolta"
              name="facolta"
              class="form-control"
              placeholder="{{x.data.Facolta}}"
              maxlength="40" 
              value={{facolta}}>
          </div>
          <div class="form-group">
            <label for="lavoro"><i class="fas fa-wrench"></i>Position</label>
            <input
              type="lavoro"
              id="lavoro"
              name="lavoro"
              class="form-control"
              placeholder="{{x.data.Lavoro}}"
              maxlength="50" 
              value={{lavoro}}>
          </div>
          
          <div class="form-group">
            <label for="azienda"><i class="fas fa-building"></i>Company</label>
            <input
              type="azienda"
              id="azienda"
              name="azienda"
              class="form-control"
              placeholder="{{x.data.Azienda}}"
              maxlength="50" 
              value={{azienda}}>
          </div>
        {{/ifeq}}
        <div class="form-group">
            <label for="descrizione"><i class="fas fa-pen"></i>Description</label>
            <input
              type="text"
              id="descrizione"
              name="descrizione"
              class="form-control"
              placeholder="{{x.data.Descrizione}}"
              maxlength="500" 
              value={{descrizione}}>
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Save
          </button>
      </form>
    </div>
  </div>
</div>
