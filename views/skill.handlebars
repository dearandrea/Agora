      
      <section class="container">
       {{#if skills}}
              
                {{#each skills}}
                   <form id="send-data{{idUTENTE}}" method="POST" action="/users/guestprofile"> 
                      <input type="hidden"  name="id" value={{idUTENTE}}>
                      <input type="hidden" name="nome" value={{nome}}>
                      <input type="hidden" name="cognome" value={{cognome}}>
                      <input type="hidden" name="professione" value={{professione}}>
                      <input type="hidden" name="email" value={{email}}>
                    <div class="my-3 p-3 bg-white rounded shadow-sm">
                      <h6>{{Nome}}</h6>
                      {{#ifeq professione "Student"}}
                      <h6 class="border-bottom border-gray pb-2 mb-0">
                         <a href="#" onclick="document.getElementById('send-data{{idUTENTE}}').submit();"> <i class="fas fa-user-graduate"></i> {{nome}} {{cognome}}</a>
                      </h6>
                      {{/ifeq}}
                      {{#ifeq professione "Professor"}}
                      <h6 class="border-bottom border-gray pb-2 mb-0">
                         <a href="#" onclick="document.getElementById('send-data{{idUTENTE}}').submit();"> <i class="fas fa-chalkboard-teacher"></i> {{nome}} {{cognome}}</a>
                      </h6>
                      {{/ifeq}}
                      {{#ifeq professione "Recruiter"}}
                      <h6 class="border-bottom border-gray pb-2 mb-0">
                         <a href="#" onclick="document.getElementById('send-data{{idUTENTE}}').submit();"><i class="fas fa-briefcase"></i> {{nome}} {{cognome}}</a>
                      </h6>
                      {{/ifeq}}
                      <div class="media text-muted pt-3">
                        <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32"><title>Placeholder</title><rect width="100%" height="100%" fill="#007bff"/><text x="50%" y="50%" fill="#007bff" dy=".3em">32x32</text></svg>
                        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                          {{email}} 
                        </p>
                        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                          {{professione}} 
                        </p>   
                      </div>
                    </div>
                 </form>  
                  
                {{/each}}

            

        {{else}}
            <p>No skills found</p>
        {{/if}}

        </section>