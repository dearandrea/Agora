<section id="gigs" class="container">
    <h1>All Users</h1>
      
        {{#if accounts}}

                {{#each accounts}}
                
                  <form id="send-data{{id}}" method="POST" action="/users/guestprofile"> 
                      <input type="hidden"  name="id" value={{id}}>
                      <input type="hidden" name="nome" value={{Nome}}>
                      <input type="hidden" name="cognome" value={{Cognome}}>
                      <input type="hidden" name="professione" value={{Professione}}>
                      <input type="hidden" name="email" value={{Email}}>
                    <div class="my-3 p-3 bg-white rounded shadow-sm">
                      {{#ifeq Professione "Student"}}
                      <h6 class="border-bottom border-gray pb-2 mb-0">
                         <a href="#" onclick="document.getElementById('send-data{{id}}').submit();"> <i class="fas fa-user-graduate"></i> {{Nome}} {{Cognome}}</a>
                      </h6>
                      {{/ifeq}}
                      {{#ifeq Professione "Professor"}}
                      <h6 class="border-bottom border-gray pb-2 mb-0">
                         <a href="#" onclick="document.getElementById('send-data{{id}}').submit();"> <i class="fas fa-chalkboard-teacher"></i> {{Nome}} {{Cognome}}</a>
                      </h6>
                      {{/ifeq}}
                      {{#ifeq Professione "Recruiter"}}
                      <h6 class="border-bottom border-gray pb-2 mb-0">
                         <a href="#" onclick="document.getElementById('send-data{{id}}').submit();"><i class="fas fa-briefcase"></i> {{Nome}} {{Cognome}}</a>
                      </h6>
                      {{/ifeq}}
                      <div class="media text-muted pt-3">
                        <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32"><title>Placeholder</title><rect width="100%" height="100%" fill="#007bff"/><text x="50%" y="50%" fill="#007bff" dy=".3em">32x32</text></svg>
                        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                          {{Email}} 
                        </p>
                        <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
                          {{Professione}} 
                        </p>   
                      </div>
                    </div>
                 </form>  
                {{/each}}

            

        {{else}}
            <p>No account</p>
        {{/if}}
      
  </section>